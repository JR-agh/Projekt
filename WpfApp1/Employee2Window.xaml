<Window x:Class="WpfApp1.Employee2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Pracownik" Height="350" Width="650" ResizeMode="NoResize">
    <Grid>
        <TextBox HorizontalAlignment="Left" IsReadOnly="True" x:Name="TxtFName" Height="22" Margin="160,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Label Content="Imię:" HorizontalAlignment="Left" Height="25" Margin="50,10,0,0" VerticalAlignment="Top" Width="66"/>
        <Label Content="Nazwisko:" HorizontalAlignment="Left" Height="25" Margin="50,40,0,0" VerticalAlignment="Top" Width="66"/>
        <TextBox HorizontalAlignment="Left" IsReadOnly="True" x:Name="TxtLName" Height="22" Margin="160,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button Content="Dodaj klienta" Click="Click_AddCustomer" HorizontalAlignment="Left" Height="30" Margin="50,215,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="Sprawdź podejrzane transakcje" Click="Click_CheckSusTransactions" HorizontalAlignment="Right" Height="30" Margin="0,215,50,0" VerticalAlignment="Top" Width="170"/>
        <Button Content="Powrót do menu" Click="Click_BackToMenu" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Height="30" Width="150"/>

    </Grid>
</Window>
