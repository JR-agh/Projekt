<Window x:Class="WpfApp1.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Wybór klienta" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label Content="Wybierz klienta:" HorizontalAlignment="Left" Height="29" Margin="30,-40,0,0" VerticalAlignment="Center" Width="130"/>
        <ComboBox x:Name="CmbCustomer" HorizontalAlignment="Left" Height="32" Margin="160,-40,0,0" VerticalAlignment="Center" Width="200"/>
        <Button Content="Cofnij" x:Name="BtnBack" Click="Button_Back" HorizontalAlignment="Left" Height="30" Margin="80,0,0,18" VerticalAlignment="Bottom" Width="80"/>
        <Button Content="Wybierz" x:Name="BtnSelect" Click="Button_Select" HorizontalAlignment="Left" Height="30" Margin="240,0,0,18" VerticalAlignment="Bottom" Width="80" />
    </Grid>
</Window>
