<Window x:Class="WpfApp1.NewTransaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Nowa operacja" Height="450" Width="800">
    <Grid>
        <Label Content="Nr konta" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="80"/>
        <ComboBox x:Name="CmbTransferType" SelectedIndex="0" HorizontalAlignment="Left" Height="22" Margin="85,259,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="Typ operacji" HorizontalAlignment="Left" Height="28" Margin="10,256,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Kwota" HorizontalAlignment="Left" Height="26" Margin="286,256,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBox HorizontalAlignment="Left" x:Name="TxtAmount" Height="22" Margin="400,258,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="180"/>
        <Label Content="Stan konta" HorizontalAlignment="Left" Height="25" Margin="320,13,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBox HorizontalAlignment="Left" IsReadOnly="True" x:Name="TxtBalance" Height="22" Margin="400,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button Content="Anuluj" Click="Click_Back" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Height="30" Width="150"/>
        <Button Content="Zatwierdź" Click="Click_AddTransaction" Margin="0,0,10,15" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Width="150"/>
        <TextBox HorizontalAlignment="Left" IsReadOnly="True" x:Name="TxtAccNmb" Height="22" Margin="85,13,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
        <Label Content="Nr konta odbiorcy" HorizontalAlignment="Left" Height="25" Margin="286,286,0,0" VerticalAlignment="Top" Width="114"/>
        <TextBox HorizontalAlignment="Left" x:Name="TxtAcc2Nmb" Height="22" Margin="400,289,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>

    </Grid>
</Window>
